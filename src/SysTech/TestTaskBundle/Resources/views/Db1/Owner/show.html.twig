{% extends 'base.html.twig' %}

{% block body %}
    <h1>Owner</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ owner.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if owner.createdAt %}{{ owner.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifiedat</th>
                <td>{% if owner.modifiedAt %}{{ owner.modifiedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ owner.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('/db1/owner_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('/db1/owner_edit', { 'id': owner.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
