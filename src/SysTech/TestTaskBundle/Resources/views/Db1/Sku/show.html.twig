{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sku</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sku.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if sku.createdAt %}{{ sku.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifiedat</th>
                <td>{% if sku.modifiedAt %}{{ sku.modifiedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sku.name }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ sku.stock }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('/db1/sku_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('/db1/sku_edit', { 'id': sku.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
