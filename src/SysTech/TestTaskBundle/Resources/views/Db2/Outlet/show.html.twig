{% extends 'base.html.twig' %}

{% block body %}
    <h1>Outlet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ outlet.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if outlet.createdAt %}{{ outlet.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifiedat</th>
                <td>{% if outlet.modifiedAt %}{{ outlet.modifiedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ outlet.name }}</td>
            </tr>
            <tr>
                <th>Ownername</th>
                <td>{{ outlet.ownerName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('/db2/outlet_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('/db2/outlet_edit', { 'id': outlet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
